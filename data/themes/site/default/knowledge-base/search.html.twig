{% extends '@site/layout/default.html.twig' %}

{% block title %}Search results - {{ siteTitle() }}{% endblock %}

{% block content %}
    <div class="container-sm mt-3">
        <div class="row">
            <div class="col">
                {% if noQueryError or articles | length == 0 %}
                    <main>
                        <h1>{{ 'page.search-results.title' | trans }}</h1>

                        <p>
                            {{ 'page.search-results.no-results' | trans }}
                        </p>
                    </main>
                {% endif %}

                {% if articles | length != 0 %}
                    <main>
                        <h1>{{ 'page.search-results.title' | trans }}</h1>

                        {% for article in articles %}
                            <section class="search-result-item">
                                <h2>
                                    <a href="{{ url('article', {
                                        locale: article.lastRevision.locale.slug,
                                        slug: article.lastRevision.slug
                                    }) }}">
                                        {{ article.lastRevision.title }}
                                    </a>
                                </h2>

                                <p>
                                    {{ article.lastRevision.introduction }}
                                </p>
                            </section>
                        {% endfor %}
                    </main>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
