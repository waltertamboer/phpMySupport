{% extends '@site/layout/default.html.twig' %}

{% set locale = category.lastRevision.locale %}

{% block title %}Articles related to {{ category.lastRevision.name }} - {{ siteTitle() }}{% endblock %}

{% block content %}
    <div class="container-sm mt-3">
        {% if articles | length == 0 %}
            <div class="row">
                <div class="col">
                    <main>
                        <h1>{{ category.lastRevision.name }}</h1>

                        <p>
                            No articles available.
                        </p>
                    </main>
                </div>
            </div>
        {% endif %}

        {% if articles | length != 0 %}
            <div class="row">
                <div class="col">
                    <main>
                        <h1>{{ category.lastRevision.name }}</h1>

                        <ul class="article-list">
                            {% for article in articles %}
                                <li>
                                    <a href="{{ url('article', {
                                        locale: article.lastRevision.locale,
                                        slug: article.lastRevision.slug
                                    }) }}">
                                        <span class="ti-file"></span>

                                        {{ article.lastRevision.title }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </main>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
