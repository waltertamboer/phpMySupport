{% extends '@site/layout/default.html.twig' %}

{% set locale = article.lastRevision.locale.slug %}

{% block title %}{{ article.lastRevision.title }} - {{ siteTitle() }}{% endblock %}

{% block content %}
    <div class="container-sm mt-3">
        <article>
            <h1>{{ article.lastRevision.title }}</h1>

            <div>
                {{ article.lastRevision.body | raw }}
            </div>

            <div class="article-meta-footer">
                <time datetime="{{ article.lastRevision.createdAt | date }}">
                    {{ 'page.view-article.last-updated' | trans({
                        '%lastUpdated%': article.lastRevision.createdAt | date('r')
                    }) }}
                </time>
                <span class="d-print-none ms-2">
                    <a href="#" onclick="window.print()">
                        <span class="ti-printer ms-2 me-1"></span>

                        {{ 'page.view-article.print-button' | trans }}
                    </a>
                </span>
            </div>
        </article>
    </div>
{% endblock %}
